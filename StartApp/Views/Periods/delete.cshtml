@model StarApp.Core.Models.Compta.Periods;

<h1>Delete Period</h1>
<h3>Are you sure you want to delete this period?</h3>
<div>
    <h4>Period Details</h4>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Chapter ID:</dt>
        <dd class="col-sm-10">@Model.ChaniterID</dd>
        <dt class="col-sm-2">Start Date:</dt>
        <dd class="col-sm-10">@Model.datedebit.ToShortDateString()</dd>
        <dt class="col-sm-2">End Date:</dt>
        <dd class="col-sm-10">@Model.Datefin.ToShortDateString()</dd>
        <dt class="col-sm-2">Count Day:</dt>
        <dd class="col-sm-10">@Model.CountDay</dd>
    </dl>
    <form asp-action="Deletepost" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>